@model IEnumerable<TimeTracking.Models.IndexProjectViewModels>

<h1>Projects List</h1>
@{
    ViewBag.Title = "Index";
}



<p>
    @Html.ActionLink("Create New Project", "Create",null, new { @class = "btn btn-primary" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Client)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.CreationDate)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
@if (item.IsOwner)
{ <span class="glyphicon glyphicon-star"></span> }
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CreationDate)
            </td>

            <td>
                @if (item.IsOwner)
                {
                    @Html.ActionLink("Edit Projects", "Edit", new { id = item.ID }) @(" | ")
                    @Html.ActionLink("Details", "Details", new { id = item.ID }) @(" | ")
                    @Html.ActionLink("Delete", "Delete", new { id = item.ID }) @(" | ")
                    @Html.ActionLink("Members", "Members", new { id = item.ID })
                }
                else
                {
                    @Html.ActionLink("Details", "Details", new { id = item.ID })
                }
            </td>
        </tr>
    }

</table>
