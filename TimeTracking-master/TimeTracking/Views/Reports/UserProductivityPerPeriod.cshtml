@model TimeTracking.Models.SetPeriodViewModel
@{

    ViewBag.Title = "UserTotalHoursPerPeriod";
}

<h2>Choose a period</h2>

@using (Html.BeginForm("UserProductivityPerPeriod", "Reports", null, FormMethod.Post, new { @class = "form-inline" }))
{

    <div class="form-group">
        @Html.LabelFor(model => model.InitialDate)


        @Html.EditorFor(model => model.InitialDate, new { htmlAttributes = new { @class = "form-control" } })

    </div>


    <div class="form-group">
        @Html.LabelFor(model => model.FinalDate)


        @Html.EditorFor(model => model.FinalDate, new { htmlAttributes = new { @class = "form-control" } })


    </div>
    <div class="form-group">
        <input type="submit" value="Search" class="btn btn-default" />
    </div>



    if (Model.ResultUsers != null)
    {
        @Html.Partial("_UserProductivityPerPeriod", Model.ResultUsers)


    }

}
